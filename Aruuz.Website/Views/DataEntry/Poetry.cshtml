@model Aruuz.Models.Poetry
@{
    ViewBag.Title = "شاعری داخلہ";
    Layout = "~/Views/Shared/_Layout.BootstrapEditorTemplates.cshtml";
    }




<script>

    $(document).ready(function () {
        $('input').UrduEditor();

    });
</script>




<ol class="breadcrumb urdu">
    <li><a href="#">شاعری</a></li>
</ol>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
    <div class="container urdu">
        <div class="row">
            <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <fieldset>
                    @Html.Label("شاعر")
                    @Html.TextBoxFor(Model => Model.poet, new { @class = "form-control" })

                    <br>

                    @{                  List<string> lst = new List<string>();
                                        lst.Add("غزل");
                                        lst.Add("نظم");
                                        lst.Add("رباعی");
                                        lst.Add("قطعہ");
                                        lst.Add("آزاد نظم");
                                        lst.Add("شعر");


                    }
                    @Html.Label("قسم")
                    @Html.DropDownListFor(Model => Model.type, new SelectList(@lst))

                    <br>
                    @Html.Label("بحور")
                    @Html.TextBoxFor(Model => Model.meters, new { @class = "form-control" })
                    <br>
                    @Html.Label("عنوان")
                    @Html.TextBoxFor(Model => Model.title, new { @class = "form-control" })
                    <br>
                    @Html.Label("کلام")
                    @Html.EditorFor(Model => Model.text, "Multiline")
                    <input type="submit" class="btn btn-primary btn-lg" value="داخل کریں" />

                </fieldset>
            </div>
        </div>
    </div>
}


<a href="#" onclick="reportClicked(0,'@User.Identity.Name')"> رپورٹ کریں </a>

<!-- Modal -->
<div class="modal fade urdu" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header active">
                <h4 class="modal-title urdu-large" id="modalLabel">معلومات</h4>
            </div>
            <div class="modal-body">


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" id="modal-button" onclick="modalButtonClicked()">
                    <p id="button-label">
                        بند کریں
                    </p>
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

