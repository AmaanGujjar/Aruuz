</style>

@section meta{
    <meta name="description" content="Free Articles about Urdu Poetry">
    <meta name="description" content="اردو شاعری اور علم عروض پر مضامین">
    <meta name="keywords" content="عروض، اردو شاعری، شاعری، بحور، بحور فہرست، بحر ہزج، بحر رمل، بحر متقارب، میر ہندی بحر، بحر ہندی، بحر رمزمہ، متدارک بحر">
    <meta name="author" content="Sayed Zeeshan Asghar">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
}




<style>
    .fb-comments, .fb-comments span, .fb-comments.fb_iframe_widget span iframe {
        width: 100% !important;
    }
</style>

<div class="urdu">
    <div class="container" dir="rtl">
        <ol class="breadcrumb urdu">
            <li><a href="/resources">مضامین</a></li>
            <li><a href="#">ویب سائٹ</a></li>
        </ol>
        <div class="row">
            <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-primary">
                    <div class="panel-heading panel-primary">
                        <img src="~/icons/articles.png" width="50" height="50" class="pull-left">
                        <div class="urdu-huge">
                           عروض سائٹ پر موجود کلام کے بحور کی فہرست
                        </div>
                        <div class="urdu">از <a class="white" href="https://twitter.com/sayed_asghar">سید ذیشان اصغر</a></div>
                    </div>
                    <div class="panel-body urdu">
                        <table class="table table-striped table-bordered urdu-naskh">
                            <tr class="success" id="main">
                                <td>بحر</td>
                                <td>بنیادی وزن</td>
                            </tr>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {
                                string url1 = "/examples/meter=?" + item.ToString();
                                List<int> lst = Meters.meterIndex(item.name.Trim());
                                string Afail = "";
                                if (lst.Count > 0)
                                {
                                    Afail = Meters.Afail(Meters.meters[lst.First()]);
                                }
                                else
                                {
                                    Afail = Meters.AfailHindi(item.name);
                                }

                                <tr>
                                    <td>
                                      @Html.ActionLink(item.name, "Meters", "Examples", new { meter = item.name.Replace("/", "_")},null)  <span class="badge alert-danger">@Html.DisplayFor(modelItem => item.count) </span>
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => Afail)
                                    </td>
                                </tr>
                               i = i + 1;

                            }
                        </table>
                        @{
                            <div id="disqus_thread"></div>
                            <script type="text/javascript">
                                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                                var disqus_shortname = 'aruuz'; // required: replace example with your forum shortname

                                /* * * DON'T EDIT BELOW THIS LINE * * */
                                (function () {
                                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                                })();
                            </script>
                            <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                            @*string url = "http://www.aruuz.com" + Request.RawUrl;

                           <div class="fb-comments img-responsive" data-href="@url" data-width="900" data-numposts="15" data-colorscheme="light"></div>*@
                        }
                    </div>
                    <div class="panel-footer panel-info urdu">
                        بتاریخ @{var date = "18-9-2014";}
                        @date
                    </div>

                </div>

               

            </div>
        </div>
    </div>
</div>


