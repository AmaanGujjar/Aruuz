@model Aruuz.Models.Resources
           @using System.Globalization

@{
    ViewBag.Title = Model.title;
    Layout = "~/Views/Shared/_Layout.BootstrapEditorTemplates.cshtml";
}

<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
<style scoped>
    .white {
        color:  #00ff21;
    }
</style>
<style scoped>
    .fb-comments, .fb-comments span, .fb-comments.fb_iframe_widget span iframe {
        width: 100% !important;
    }
</style>

@section meta{
    <meta name="description" content="Free Articles about Urdu Poetry" />
    <meta name="description" content="اردو شاعری اور علم عروض پر مضامین" />
    <meta name="keywords" content="@Model.keywords" />
    <meta name="author" content="@Model.author" />
    <meta name="image" content="/images/aruuz3.jpg" />
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
    <meta property="fb:app_id" content="202167263310439" />
    <meta property="og:type" content="aruuztaqti:poetry" />
    <meta property="og:title" content="@Model.title" />
    <meta property="og:image" content="/images/aruuz3.jpg" />
    <meta property="og:description" content="@Model.title" />
    }




<div class="container" dir="rtl">
    <ol class="breadcrumb urdu">
        <li><a href="/Resources">مضامین</a></li>
        <li><a href="#">@Model.category</a></li>
    </ol>
    <div class="row">
        <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading panel-primary">
                    <img src="~/icons/articles.png" width="50" height="50" class="pull-left">

                    <div class="urdu-huge">
                        @Model.title
                    </div>
                    <div class="urdu">از <a class="white" href="@Model.website">@Model.author</a></div>


                </div>
                <div class="panel-body urdu">
                    @Html.Raw(@Model.text)


                    <hr>
                    <br>
                    @{
                        @*string url = "http://www.aruuz.com" + Request.RawUrl;

                            <div class="fb-comments img-responsive" data-href="@url" data-width="900" data-numposts="15" data-colorscheme="light"></div>*@
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'aruuz'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function () {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
}
                </div>
                <div class="panel-footer panel-info urdu">
                    بتاریخ 
                    @Model.date.ToString("d MMMM، yyy", CultureInfo.CreateSpecificCulture("ur-PK"))




                </div>

            </div>

        </div>
    </div>
</div>
