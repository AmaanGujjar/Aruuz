@model Aruuz.Models.Input

@{
    ViewBag.Title = "اردو اشعار کی اصلاح کریں";
    Layout = "~/Views/Shared/_Layout.BootstrapEditorTemplates.cshtml";
}



@section meta{
    <meta name="description" content="Scansion of Urdu Poetry into meters and feet">
    <meta name="description" content="اردو شاعری کی تقطیع اور بحر اور وزن کی معلومات">
    <meta name="keywords" content="عروض، اردو شاعری، شاعری، بحور، بحور فہرست، بحر ہزج، بحر رمل، بحر متقارب، میر ہندی بحر، بحر ہندی، بحر رمزمہ، متدارک بحر، اشعار کی اصلاح، خود کار سافٹ ویئر، مشینی استاد">
    <meta name="author" content="Sayed Zeeshan Asghar">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
<meta property="fb:admins" content="sayedzeeshan.asghar" />
<meta property="fb:app_id" content="202167263310439" />
<meta property="fb:profile_id" content="sayedzeeshan.asghar" />
<meta property="og:type" content="aruuztaqti:poetry" />
<meta property="og:title" content="@ViewBag.Title" />
<meta property="og:image" content="/images/aruuz3.jpg" />
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>

        <div class="container">
            <ol class="breadcrumb urdu">
                <li><a href="#">اصلاح</a></li>
            </ol>
            <div class="row">

                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="panel  panel-primary">
                        <div class="panel-heading urdu">
                            <img src="~/icons/create.png" width="50" height="50" class="pull-left">
                           <p class="urdu-huge">اشعار کی اصلاح</p>
                            
                        </div>
                        <div class="panel-body urdu" style="background-color:#e8e8e8">


                            <p class="urdu">
                                <a href="http://aruuz.com/resources/article/5">
                                    <span class="glyphicon glyphicon-info-sign"></span>
                                    اصلاح سیکشن کا استعمال کیسے کریں؟
                                </a>
                            </p>


                            <p class="urdu">
                                <a href="#" onclick="infoClicked(2)">
                                    <span class="glyphicon glyphicon-info-sign"></span>
                                    اصلاح بٹن دبانے سے پہلے ان ہدایات کا مطالعہ ضرور کریں
                                </a>
                            </p>

                            @Html.TextAreaFor(Model => Model.text, 8, 8, new { @class = "form-control input-block-level", @placeholder = "قریب ترین بحر معلوم کرنے اور اصلاح کی معلومات حاصل کرنے کے لئے اشعار یہاں داخل کریں", @tabindex = "1" })


                        </div>
                        <div class="panel-footer urdu" style="background-color:#dddddd;border-top: 1px solid darkgray;">
                            <div class="row">
                                <div class="urdu col col-lg-1 col-md-1 col-sm-2 col-xs-12" >
                                    <div class="btn btn-sm btn-default" onclick="infoClicked(3)" data-toggle="popover" data-content="اردو کی-بورڈ کے بغیر اس سائٹ میں انپٹ دینے کے لئے اس کی-بورڈ لے-آوٹ کا ستعمال کریں" data-title="ہدایات">
                                        <img src="~/icons/keyboard.png" />
                                    </div>
                                @*</div>

                                <div class="urdu col col-lg-1 col-md-1 col-sm-1 col-xs-1">*@
                                   
                                </div>

                                <div class="urdu col col-lg-2 col-md-2 col-sm-2 col-md-push-0 col-sm-push-0 col-lg-push-0 col-xs-6 pull-right">
                                    <input type="submit" class="btn btn-default btn-lg" value="اصلاح دکھائیں" tabindex="1" />
                                    @*<div class="btn btn-sm btn-info" onclick="infoClicked(2)" data-toggle="popover" data-content="اس سائٹ میں انپٹ دینے سے پہلے ہدایات کا مطالعہ کرنے کے لئے اس بٹن کو دبائیں" data-title="ہدایات">
                                        <span class="glyphicon glyphicon-info-sign"></span>
                                    </div>*@
                                </div>
                            </div>
                        </div>

                    </div>
                 </div>
            </div>
        </div>
    </fieldset>
}



 <!-- Modal -->
<div class="modal fade urdu" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header active">
                <h4 class="modal-title urdu-large" id="modalLabel">معلومات</h4>
            </div>
            <div class="modal-body">


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" id="modal-button" onclick="modalButtonClicked()">
                    <p id="button-label">
                        بند کریں
                    </p>
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

