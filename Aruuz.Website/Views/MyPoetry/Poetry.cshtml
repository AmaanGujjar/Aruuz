@model Aruuz.Models.Publish
@using Aruuz.Models
@{
    ViewBag.Title = " - " + Model.title + " - " + Model.name;
    Layout = "~/Views/Shared/_Layout.BootstrapEditorTemplates.cshtml";
}

<div id="fb-root"></div>
