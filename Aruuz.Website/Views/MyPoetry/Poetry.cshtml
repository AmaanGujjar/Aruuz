<script type="text/javascript">
    $(document).ready(function () {
        $('.textarea').UrduEditor();
        $('[id^=section0]').hide();
        $('[id^=section1]').hide();
        $('[id^=section2]').hide();
        var select = "[id^=input-]";
        var meters = $(select);
        for (var i = 0; i < meters.length; i++) {
            var abs = '[id*=-' + meters[i].value.replace("/", "").replace("(", "").replace(")", "").replace(/\s/g, '_') + '-]';
            $("tbody").filter(abs).show();
        }
    });
</script>


